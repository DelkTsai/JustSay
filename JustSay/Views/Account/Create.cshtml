@model Justsay.Models.Member
@{
    ViewBag.Title = "注册";
}

<h2>注册</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


<div class="row well">


    <div class="col-md-4">


        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            <div class="form-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Email)
                </div>
                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Email" })
                    @Html.ValidationMessageFor(model => model.Email)
                </div>
            </div>
            <div class="form-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.Password)
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "密码" })
                    @Html.ValidationMessageFor(model => model.Password)
                </div>
            </div>
            <div class="form-group">
                <div class="editor-label">
                    @Html.LabelFor(model => model.RepPassword)
                </div>
                <div class="editor-field">
                    @Html.PasswordFor(model => model.RepPassword, new { @class = "form-control", placeholder = "重复密码" })
                    @Html.ValidationMessageFor(model => model.RepPassword)
                </div>
            </div>
            <p>
                <input type="submit" value="注册" class="btn btn-primary pull-right" />
            </p>

        }

        <div>
            @Html.ActionLink("返回主页", "Index","home")
        </div>




    </div>

    <div class="col-md-8">
         <div class="jumbotron">
            <h3>JustSay是什么？</h3>
            <p> JustSay 是一个分享社区，你可以分享情侣间的笑话，囧事。</p>
            <p> 可以表白</p>
            <p><a class="btn btn-primary btn-sm" role="button">了解更多</a></p>
        </div>

    </div>

</div>



