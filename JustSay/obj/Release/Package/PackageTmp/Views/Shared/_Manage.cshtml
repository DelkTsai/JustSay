<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <script src="http://cdn.bootcss.com/jquery/1.10.2/jquery.min.js"></script>

    <script src="@Url.Content("~/Scripts/site.js")" type="text/javascript"></script>
    @*  <script src="../../Scripts/jquery-1.7.1.js"></script>*@
    <script src="@Url.Content("~/Scripts/modernizr-2.5.3.js")" type="text/javascript"></script>
    <script src="http://cdn.bootcss.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
    @*<script src="@Url.Content("~/Content/js/bootstrap.js")" type="text/javascript"></script>*@
    <link rel="stylesheet" href="http://cdn.bootcss.com/bootstrap/3.2.0/css/bootstrap.min.css">
    @*  <link href="@Url.Content("~/Content/css/bootstrap.css")" rel="stylesheet" type="text/css" />*@
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
</head>

<body>


    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @{
                    Html.RenderPartial("Header");
                }


                <h2>管理</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">


                <div class="row">
                    <div class="col-md-3">
                        <div class="panel panel-info">
                            <div class="panel-heading">
                                <h3 class="panel-title">项目</h3>
                            </div>
                            <div class="panel-body">
                                <div class="alert alert-info">
                                    <p class="text-center"><a href="/account/Index">用户</a></p>
                                </div>
                                <div class="alert alert-info">
                                    <p class="text-center"><a href="/message">悄悄话</a></p>
                                </div>
                                <div class="alert alert-info">
                                    <p class="text-center"><a href="/confess/Manage">表白</a></p>
                                </div>
                                <div class="alert alert-info">
                                    <p class="text-center"><a href="/relation/Manage">Relation</a></p>
                                </div>
                                <div class="alert alert-info">
                                    <p class="text-center"><a href="/funny/manage">趣事</a></p>
                                </div>
                                <div class="alert alert-info">
                                    <p class="text-center"><a href="/comment">回复</a></p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-9">

                        <div class="panel panel-info">
                            <div class="panel-body">
                                @RenderBody()
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @{
                    Html.RenderPartial("Footer");
                }
            </div>
        </div>
    </div>



    <script src="@Url.Content("~/Scripts/site.js")" type="text/javascript"></script>
    @*以下为悄悄话模态框*@

    <!-- Modal -->
    <div class="modal fade" id="justsaymodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">

                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="ModalTitle">正在加载...</h4>
                </div>

                <div class="modal-body">
                    <img src="../../Content/Images/loading.gif" />正在加载...
                </div>


            </div>
        </div>
    </div>
    @*    <script src="../../Scripts/MicrosoftAjax.js"></script>
    <script src="../../Scripts/MicrosoftMvcAjax.js"></script>*@

</body>
</html>
