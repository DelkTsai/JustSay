@model Justsay.Models.Comment
<hr />
@if (User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("Create", "Comment"))
    {
    @Html.ValidationSummary(true)

    @Html.HiddenFor(model => model.FunnyID)
    @Html.TextAreaFor(model => model.Content, new { @class = "form-control", rows = "4", placeholder = "评论 将增加 2个节操币" })
    @Html.ValidationMessageFor(model => model.Content)
    <input type="submit" value="回复" class="btn btn-default btn-lg pull-right" />
     <script src="/Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="/Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <div class="clearfix"></div>

    }
}
else
{
    <div class="well well-lg">
        <p class="text-center lead">
           发表评论，请先<a href="/account/create">
                <button type="button" class="btn btn-success">注册</button></a>
            <a href="/account/Logon" data-toggle="modal" data-target="#justsaymodal">
                <button type="button" class="btn btn-info">登录</button></a>
        </p>
    </div>
}
<hr />
