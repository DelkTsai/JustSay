  <![endif]-->
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @{
                    Html.RenderPartial("Header");
                    }
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">

                
<div class="row">
    <div class="col-md-3">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Mine</h3>
            </div>
            <div class="panel-body">
                @*<p class="bg-success"><a>我的信息</a></p>*@
                <div class="alert alert-success">
                   <p class="text-center"> <a href="/account/myspace">我的信息</a></p>
                </div>
                <div class="alert alert-success">
                    <p class="text-center"><a href="/message/MyNewMessage">听悄悄话</a></p>
                </div>
                <div class="alert alert-success">
                    <p class="text-center"><a href="/message/MyMessage">我说的悄悄话</a></p>
                </div>
                <div class="alert alert-success">
                    <p class="text-center"><a href="/confess/Myconfess">表白</a></p>
                </div>
                <div class="alert alert-success">
                    <p class="text-center"><a href="/relation/myrelation">暗恋</a></p>
                </div>
                <div class="alert alert-success">
                    <p class="text-center"><a href="/funny/Myfunny">点滴</a></p>
                </div>
                <div class="alert alert-success">
                    <p class="text-center"><a href="/comment/Mycomment">回复</a></p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-9">
                @RenderBody()
        </div>
    </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                @{
                    Html.RenderPartial("Footer");
                }
            </div>
        </div>
    </div>

    <script src="@Url.Content("~/Scripts/site.js")" type="text/javascript"></script>
    @*以下为悄悄话模态框*@

    <!-- Modal -->
    <div class="modal fade" id="justsaymodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">

                <div class="modal-header">

                   <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title" id="ModalTitle">正在加载...</h4>
                </div>

                <div class="modal-body"><img src="../../Content/Images/loading.gif" />正在加载...</div>

                
            </div>
        </div>
    </div>

</body>
</html>
