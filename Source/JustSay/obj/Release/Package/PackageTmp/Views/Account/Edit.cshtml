@model Justsay.Models.Member
@{
    ViewBag.Title = "Edit";
 }

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>修改个人资料</legend>
          <div class="form-group">
        @Html.HiddenFor(model => model.ID)

        <div class="editor-label">
            @Html.LabelFor(model => model.ShowName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.ShowName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ShowName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.QQ)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.QQ, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.QQ)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Phone)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Phone)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RealName)
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.RealName, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.RealName)
        </div>

            @if (Model.ID.ToString() != User.Identity.Name)
            {
        <div class="editor-label">
            @Html.LabelFor(model => model.RoleID, "Role")
        </div>
        <div class="editor-field">
            
            @Html.DropDownList("RoleID",
            new List<SelectListItem>{new SelectListItem(){ Text="限制用户", Value="6"},
                new SelectListItem(){ Text="用户", Value="5"},
                new SelectListItem(){ Text="高级用户", Value="4"},
                new SelectListItem(){ Text="管理员", Value="3"},
            })
            @Html.ValidationMessageFor(model => model.RoleID)
            
        </div>
        }

        <p>
            <input type="submit" value="Save" class="btn btn-default" />
        </p>
      </div>
    </fieldset>
}

<div>
    @Html.ActionLink("返回", "Myspace")
</div>
